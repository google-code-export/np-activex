{
  "name": "__MSG_plug_name__",
  "version": "1.5.0.6",
  "manifest_version": 2,
  "description": "__MSG_plug_desp__",
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequestBlocking",
    "webRequest"
  ],
  "content_security_policy": "script-src 'self' https://connect.facebook.net https://apis.google.com; object-src 'self'",
  "default_locale": "en",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["configure.js", "inject_actions.js", "inject_start.js"],
      "run_at":"document_start"
    },
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["inject_doreplace.js"],
      "run_at":"document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "minimum_chrome_version": "18.0.0.0",
  "page_action": {
    "default_icon": "icon16.png"
  },
  "options_page": "options.html",
  "plugins": [{
    "path": "npactivex.dll",
    "public": true
  }],
  "requirements": {
    "plugins": {
      "npapi": false
    }
  },
  "web_accessible_resources": [
    "notifybar.css",
    "notifybar.js",
    "notifybar.html"
  ]
}
